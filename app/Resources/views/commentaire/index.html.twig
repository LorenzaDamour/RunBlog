              <a href="{{ path('admincommentaire_delete', { 'id': commentaire.id }) }}"><i class=" fa fa-remove"></i> supprimer</a>
            </p>

        </div>
        {% endfor %}


        <div class="col-md-offset-2 col-md-6">
            {% for commentaire in commentaires %}
            <div class="form" style="padding-bottom=5px; background-color:white;">
               <a href="{{ path('commentaire_show', { 'id': commentaire.id }) }}"><h4 class="text-center" style="color:black">
                 Commentaire de <strong>{{commentaire.utilisateur.username}}</strong></br>
                 {{ commentaire.commentaire }}
               </h4></a>
            <p class="text-right">
              {{commentaire.article.titre}}
            </p>
            <ul style="display-flex">
                <li>
                    <a href="{{ path('admincommentaire_delete', { 'id': commentaire.id }) }}">suprime</a>
                </li>
            </ul>
        </div>
        {% endfor %}
        </div>
        </div>
    </div>
</div>

{% endblock %}
