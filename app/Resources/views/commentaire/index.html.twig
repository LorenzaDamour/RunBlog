{% include "FOSUserBundle::layout.html.twig" %}
{% include "base.html.twig" %}

{% block body %}
  <div class="container">
    <h1>Commentaire list</h1>
    <div class="row">
        <div class="col-md-12">
        <div class="col-md-4" style="background-color:white;">
            <ul>
                <li><a href="#">Tout</a></li>
                <li><a href="{{ path('commentaire_user') }}">Posté</a></li>
                <li><a href="{{ path('commentaire_aime') }}">J'aime reçus</a></li>
                <li><a href="{{ path('commentaire_like') }}">J'aime postés</a></li>
            </ul>
        </div>
        <div class="col-md-offset-2 col-md-6">
            {% for commentaire in commentaires %}
            <div style="padding-bottom=5px; background-color:white;">
               <a href="{{ path('commentaire_show', { 'id': commentaire.id }) }}"><h2 class="text-center" style="color:black">
                  {{commentaire.article.titre}}
               </h2></a>
            <p>
              Commentaire de <strong>{{commentaire.utilisateur.username}}</strong></br>
              {{ commentaire.commentaire }}
            </p>
            <ul style="display-flex">
                <li>
                    <a href="{{ path('admincommentaire_delete', { 'id': commentaire.id }) }}">suprime</a>
                </li>
            </ul>
        </div>
        {% endfor %}
        </div>
        </div>
    </div>
</div>

{% endblock %}
